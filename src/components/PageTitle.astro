---
export interface Props {
  title: string
}

const { title } = Astro.props
---

{
  (
    <h3 class="page-title">
      <>{title}</>
    </h3>
  )
}

<style>
  .page-title {
    padding: 5px 0px 30px;
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--fg);
    border-bottom: 2pt solid black;
  }
</style>
