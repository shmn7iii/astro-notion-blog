      <a href="https://www.wantedly.com/id/shmn7iii">
        <svg width="20px" height="20px" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>Wantedly</title><path d="M18.453 14.555c-.171-.111-.658-.764-2.006-3.982a9.192 9.192 0 0 0-.237-.526l-.274-.664-2.362-5.702H8.85l2.362 5.702 2.362 5.706 2.181 5.267a.196.196 0 0 0 .362 0l2.373-5.682a.1.1 0 0 0-.037-.119zm-8.85 0c-.171-.111-.658-.764-2.006-3.982a8.971 8.971 0 0 0-.236-.525l-.276-.665-2.36-5.702H0l2.362 5.702 2.362 5.706 2.181 5.267a.196.196 0 0 0 .362 0l2.374-5.682a.098.098 0 0 0-.038-.119ZM24 6.375a2.851 2.851 0 0 1-2.851 2.852 2.851 2.851 0 0 1-2.852-2.852 2.851 2.851 0 0 1 2.852-2.851A2.851 2.851 0 0 1 24 6.375Z"/></svg>
      </a>
    </div>
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    padding: 10px 20px 10px 20px;
    margin-bottom: 30px;
    border-bottom: 1px solid;
  }
  @media (max-width: 600px) {
    .header {
      display: block;
      padding: 5px 10px 5px 10px;
    }
  }

  .logo {
    display: flex;
  }

  .logoShape {
    width: 130px;
    height: 40px;
    background-color: #FFD840;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }
  .logoShape p {
    margin: 4px 0 0 0;
    color: #333;
    font-family: 'Fugaz One', cursive;
    font-size: 25px;
    font-weight: 300;
  }
  @media (max-width: 600px) {
    .logoShape  {
      position: static;
    }
  }

  .logoSubTitle {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-left: 10px;
  }
  .logoSubTitle p {
    margin: 0;
    color: #333;
    font-size: 25px;
    font-weight: 700;
  }
  @media (max-width: 600px) {
    .logoSubTitle  {
      display: none;
    }
  }

  .headerInfo {
    display: flex;
  }

  .headerNavis {
    display: flex;
    align-items: center;
  }
  .headerNavis ul {
    list-style: none;
    margin: inherit;
    padding: 0.4rem 0;
    font-size: 1.1rem;
  }
  @media (max-width: 640px) {
    .headerNavis ul {
      font-size: 1rem;
    }
  }
  .headerNavis ul li {
    display: inline-block;
    padding: 0 5px;
  }
  .headerNavis ul li :global(a.active) {
    color: var(--accents-3);
  }
  .headerNavis a {
    display: flex;
    align-items: flex-end;
    margin: 0 10px 0 10px;
    color: var(--fg);
    font-weight: 700;
    cursor: pointer;
  }
  @media (max-width: 600px) {
    .headerNavis  {
      margin-top: 5px;
    }
  }

  .headerLinks {
    display: flex;
    align-items: center;
  }
  .headerLinks a {
    display: flex;
    align-items: flex-end;
    margin: 0 10px 0 10px;
    color: var(--fg);
    cursor: pointer;
  }
  @media (max-width: 600px) {
    .headerLinks  {
      display: none;
    }
  }
</style>
