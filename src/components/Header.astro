---
export interface Props {
  path: string
}
const { path = '/' } = Astro.props

const navItems = [
  { label: 'Home', path: '/' },
  { label: 'News', path: '/news' },
  { label: 'Works', path: '/works' },
  { label: 'Blog', path: '/blog' },
]
---

<header class="header">
  <div class="logo">
    <div class="logoShape">
      <a href="/" >
        <div>
          <p>shmn7iii</p>
        </div>
      </a>
    </div>
    <div class="logoSubTitle">
      {path ? (
        <a href={"/" + path.split('/')[1]} > <p>{path.split('/')[1].charAt(0).toUpperCase() + path.split('/')[1].slice(1).toLowerCase()}</p> </a>
      ) : (
        null
      )}
    </div>
  </div>

  <div class="headerInfo">
    <div class="headerNavis">
      <ul>
        {navItems.map(({ label, path: p }) => (
          <li key={label}>
            <a href={p} class={p === path ? 'active' : null}>{label}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="headerLinks">
      <a href="https://twitter.com/shmn7iii">
